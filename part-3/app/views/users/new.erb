<h3>Sign Up</h3>

<% if @user.errors.any? %>
<%= erb :"_errors", locals: {errors: @errors} %>
<% end %>

<form method="POST" action="/users" class="login-register-form">
  <input type="text" name="user[name]" placeholder="Name" value="<%= @user.name %>">
  <input type="text" name="user[username]" placeholder="Username" value="<%= @user.username %>">
  <input type="email" name="user[email]" placeholder="Email" value="<%= @user.email %>">
  <input type="password" name="user[password]" placeholder="Password" value="">
  <input type="submit">
</form>
